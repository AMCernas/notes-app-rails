<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Post</h4>
  </div>

  <div class="row justify-content-center">
  <div class="row justify-content-center new-post">
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :status %>
        <%= form.select(:status, options_for_select(Post.status_options))  %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
  </div>
</div>

<div class="cancel-container">
  <%= link_to "Cancel", posts_path, class: 'cancel' %>
</div>