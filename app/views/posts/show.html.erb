
<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Show details of post <%= @post.id %> made by <%= @post.user_id%></h4>
  </div>

  <div class="row justify-content-center">
    <div class="show-post" >
      <div>
          <h4>Title:</h4>
          <p><%= @post.title %></p>
          <h4>Description:</h4>
          <p><%= @post.description %></p>
      </div>
    </div>
  </div>
</div>


<div class="cancel-container">
  <%= link_to "Back", posts_path, class: 'cancel' %>
</div>