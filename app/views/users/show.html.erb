
<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Show details of post <%= @user.id %></h4>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
        <tr>
          <th>Name:</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>User Number:</th>
          <td><%= @user.user_num %></td>
        </tr>
        <tr>
          <th>Status:</th>
          <td><%= @user.status %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="cancel-container">
  <%= link_to "Back", users_path, class: 'cancel' %>
</div>