
<div class="container ">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New User</h4>
  </div>
  
  <div class="row justify-content-center">
  <div class="row justify-content-center new-user">
    <%= form_with scope: :user, url: users_path, local: true do |form| %>
    
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :user_num, "User Number (generated)" %>
        <%= form.number_field :user_num, readonly: true %>
      </div>

      <div class="form-group">
        <%= form.label :status %>
        <%= form.select(:status, options_for_select(User.status_options))  %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
  </div>
</div>

<div class="cancel-container">
  <%= link_to "Cancel", users_path, class: 'cancel' %>
</div>