<div class="login-container">
    <h1 class="login-title"> User Login</h1>

    <div class="user-outer-login-container">
        <div class="user-inner-login-container">
            <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

            <div class="user-login-container">
                <%= f.label :user_num %>
                <%= f.text_field :user_num %>
            </div>

            <div class="user-button-container">
                <%= f.submit "Log in", class: 'form-control btn-primary' %>
            </div>
            <% end %>
        </div>
    </div>

    <%= link_to "Admin login", new_admin_session_path, class: 'login-admin' %>

</div>